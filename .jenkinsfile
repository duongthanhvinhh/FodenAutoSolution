pipeline {
    agent any
    tools {
      maven 'MAVEN_HOME' // Replace with your Maven version
    }
    stages {
        stage('Init Selenium Grid') {
            steps {
                powershell '''
                  docker-compose up -d
                '''
            }
        }
        stage('Selenium Grid Up') {
            steps {
                powershell '''
                  python check_container_status.py
                '''
            }
        }
        stage('Run Tests') {
            steps {
                script {
                    def mvnResult = powershell('''
                        mvn clean test
                    ''')
                }
            }
            post {
                always {
                    powershell '''
                        docker-compose down
                    '''
                    allure([
                        includeProperties: false,
                        jdk: '',
                        properties: [],
                        reportBuildPolicy: 'ALWAYS',
                        results: [[path: 'target/allure-results']]
                    ])
                }
            }
        }
    }
}